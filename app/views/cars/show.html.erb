<div class="container car">
  <div class="card-trip">
    <%= image_tag('2ch.jpg') %>
    <div class="card-trip-infos">
      <div>
        <h2><%= @car.brand %></h2>
      </div>
      <div class="price">
        <h2 class="card-trip-pricing"><%= @car.price %> €/jour</h2>
      </div>
    </div>
  </div>
</div>

<div class="back">
  <%= link_to 'Retour', cars_path, class: 'backlink' %>
</div>

<div class="container-simple-form">
  <%= simple_form_for([@car,@booking]) do |f| %>
      <%= f.input :start_date, label: 'Date de début de la location :' %>
      <%= f.input :end_date, label: 'Date de fin de la location :' %>
      <%= f.submit "Réservez", class: 'backlink' %>
  <% end %>
</div>
